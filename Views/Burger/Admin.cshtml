@model List<ProjektHB.Models.Burger>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <link href="https://fonts.googleapis.com/css2?family=Indie+Flower&display=swap" rel="stylesheet">
    <meta charset="utf-8">
    <meta name="viewport" content="width-device-width" />
    <link href="~/css/cssmall.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link href="https://fonts.googleapis.com/css2?family=Amatic+SC&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Fredericka+the+Great&display=swap" rel="stylesheet">
    <style>
        /*CSS klasser och id:n*/
        table {
            border-collapse: collapse;
            border: 3px solid black;
            margin-bottom: 200px;
        }

        th {
            background-color: beige;
        }

        td {
            border: 3px solid black;
        }

        table.auto {
            table-layout: auto;
            width: 100%
        }

        caption {
            caption-side: bottom;
            color: #FF5722;
            text-align: left;
            margin-left: 25px;
            font-family: 'Fredericka the Great', cursive;
            font-size: 20px;
        }

        a {
            font-family: 'Fredericka the Great', cursive;
            font-size: 20px;
        }

        h1 {
            font-family: 'Amatic SC', cursive;
            color: #FFFFFF;
            text-align: center;
            margin-top: 60px;
            margin-bottom: 70px;
            font-size: 60px;
        }
    </style>
</head>
<body>
    <div>
        <h1 >Välkommen chefen!</h1>
    </div>
        <a>
            <table>
                <caption>@Html.ActionLink("Skapa ny burgare", "CreateBurger", "Burger")</caption>
                <caption>@Html.ActionLink("Logga ut", "SignOut", "Login")</caption>
                <tr>
                    <th>Burgare</th>
                    <th>Ingredienser</th>
                    <th>Pris(kr)</th>
                    <th>Uppdatera</th>
                    <th>Ta bort</th>
                </tr>
                @foreach (var burger in Model)@*För varje burgare i listan, visas nedanför*@
                {
                 <tr>
                    <td style="color: #FFAD32;">@Html.DisplayFor(item => burger.namn)</td>@*Visar namnet som är lagrat i listan och databasen*@
                    <td style="color: #FFAD32;">@Html.DisplayFor(item => burger.merinfo)</td>
                    <td style="color: #FFAD32;">@Html.DisplayFor(item => burger.pris)kr</td>
                    <td style="color: #e84118">@Html.ActionLink("Uppdatera", "UpdateBurger", new { id = burger.id })</td>@*Tar vald kolumn med tillhörande id och visar dess data*@
                    <td style="color: #e84118">@Html.ActionLink("Radera", "DeleteBurger", new { id = burger.id })</td>
                 </tr>
                }
            </table>
        </a>
</body>
</html>
